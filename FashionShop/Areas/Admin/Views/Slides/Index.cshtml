@model PagedList.IPagedList<FashionShop.Models.EF.Slide>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

@section _Header
{
    <link href="~/Content/admin/Css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/admin/Css/dataTables.responsive.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý slide</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bảng dữ liệu slide
            </div>
            <!-- /.panel-heading -->
            <div style="margin-bottom:10px; margin-top:15px; float:right; margin-right:20px">
                <a href="@Url.Action("Create", "Slides")">Thêm slide</a>
            </div><div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th style="width:300px">Tên slide</th>
                            <th>Hình ảnh</th>
                            <th>Vị trí</th>
                            <th>Ngày tạo</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var number = 1;}

                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.Raw(number++)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.SlideName)
                                </td>
                                <td style="text-align:center">
                                    <img src="~/Images/Slides/@item.SlideImg" alt="hinh-anh" width="50px" height="50px" />
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Order)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Datebegin)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="pagination flex-m flex-w p-t-26 m-t-0" style="float:right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section _Footer
{
    <script src="~/Content/admin/Js/jquery.dataTables.min.js"></script>
    <script src="~/Content/admin/Js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/admin/Js/dataTables.responsive.js"></script>
}
