@model IEnumerable<FashionShop.Models.EF.News>

@foreach (var item in Model)
{
    <div class="col-sm-10 col-md-4 p-b-30 m-l-r-auto">
        <!-- Block3 -->
        <div class="block3">
            <a href="/Home/tin-tuc/@item.Meta-@item.ID" class="block3-img dis-block hov-img-zoom" style="border-radius: 20px">
                <img src="~/Images/Products/@item.NewImg" alt="IMG-BLOG">
            </a>

            <div class="block3-txt p-t-14">
                <h4 class="p-b-7">
                    <a href="/Home/tin-tuc/@item.Meta-@item.ID" class="m-text11">
                        @item.NewName
                    </a>
                </h4>

                @*<span class="s-text6">By</span> <span class="s-text7">Nancy Ward</span>
                <span class="s-text6">on</span> <span class="s-text7">July 22, 2017</span>*@

                <p class="s-text8 p-t-16">
                    @item.Desciption
                </p>
            </div>
        </div>
    </div>
}

