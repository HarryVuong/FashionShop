@model PagedList.IPagedList<FashionShop.Models.EF.News>
@using PagedList.Mvc

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/Index.cshtml";
}

<section class="bgwhite p-t-60">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-9 p-b-75">
                <div class="p-r-50 p-r-0-lg">
                    <!-- item blog -->
                    @foreach (var item in Model)
                    {
                        <div class="item-blog p-b-80">
                            <a href="@item.Meta-@item.ID" class="item-blog-img pos-relative dis-block hov-img-zoom" style="border-radius:20px">
                                <img src="~/Images/Products/@item.NewImg" alt="IMG-BLOG">

                                <span class="item-blog-date dis-block flex-c-m pos1 size17 bg4 s-text1">
                                    @item.Datebegin
                                </span>
                            </a>

                            <div class="item-blog-txt p-t-33">
                                <h4 class="p-b-11">
                                    <a href="@item.Meta-@item.ID" class="m-text24">
                                        @item.NewName
                                    </a>
                                </h4>

                                <p class="p-b-12">
                                    @item.Desciption
                                </p>

                                <a href="@item.Meta-@item.ID" class="s-text20">
                                    Continue Reading
                                    <i class="fa fa-long-arrow-right m-l-8" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>

                    }
                </div>

                <!-- Pagination -->
                <div class="pagination flex-m flex-w p-t-26 m-t-0" style="margin-left:-10px; margin-bottom:-32px; font-style:oblique; color:#de4242; font-weight:bolder">
                    Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @(Model.PageCount)
                </div>
                <div class="pagination flex-m flex-w p-t-26 m-t-0">
                    @Html.PagedListPager(Model, page => Url.Action("News", new { page }))
                </div>   
            </div>

            <div class="col-md-4 col-lg-3 p-b-75">
                <div class="rightbar">
                    <!-- Search -->
                    <div class="pos-relative bo11 of-hidden">
                        <input class="s-text7 size16 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search">

                        <button class="flex-c-m size5 ab-r-m color1 color0-hov trans-0-4">
                            <i class="fs-13 fa fa-search" aria-hidden="true"></i>
                        </button>
                    </div>

                    <!-- Categories -->
                    <h4 class="m-text23 p-t-56 p-b-34 txtretroshadow">
                        Categories
                    </h4>

                    @{ Html.RenderAction("Category", "News"); }

                    <!-- Featured Products -->
                    <h4 class="m-text23 p-t-65 p-b-34 txtretroshadow">
                        Sản phẩm HOT
                    </h4>

                    @{ Html.RenderAction("Product", "News"); }
                </div>
            </div>
        </div>
    </div>
</section>





