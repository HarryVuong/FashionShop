@model PagedList.IPagedList<FashionShop.Models.EF.Product>
@using PagedList.Mvc

@foreach (var item in Model)
{
    <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
        <!-- Block2 -->
        <div class="block2">

            <div class="block2-img wrap-pic-w of-hidden pos-relative" style="border-radius: 20px">
                <img src="~/Images/Products/@item.ProductImg" alt="IMG-PRODUCT">
                <div class="block2-overlay trans-0-4">
                    <div class="block2-btn-addcart w-size1 trans-0-4">
                        <!-- Button -->
                        <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>


            <div class="block2-txt p-t-20">
                <a href="/@item.Meta-@item.ID" data-id="@item.ID" class="block2-name dis-block s-text3 p-b-5">
                    @item.ProductName
                </a>

                <span class="block2-price m-text6 p-r-5">
                    $ @item.ProductPrice
                </span>
            </div>
        </div>
    </div>
}

<div class="pageIndexs">
    @for (int i = 1; i <= Model.PageCount; i++)
    {
        if (i == Model.PageNumber)
        {
            <div class="pagination flex-m flex-w p-t-26 m-t-0" style="cursor:pointer; padding:10px; background-color:black">
                <span data-id="@i" class="pageIndex" style="color:white">@i</span>
            </div>
        }
        else
        {
            <div class="pagination flex-m flex-w p-t-26 m-t-0" style="cursor:pointer; padding:10px; background-color:black">
                <span data-id="@i" class="pageIndex" style="color:orange">@i</span>
            </div>
        }
    }
</div>

<script>
    $(function () {
        $('.pageIndex').click(function () {
            var pageIndex = $(this).data('id');
            var productId = $('.productId').data('id');
            product(productId, pageIndex);
        });
    });
</script>